<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:datePickerDialogTheme">@style/datePickerTheme</item>
        <item name="android:timePickerDialogTheme">@style/timePickerTheme</item>
    </style>
    
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="datePickerTheme" parent="Theme.AppCompat.Light.Dialog">
    	<item name="colorAccent">#30383a</item>
    	<item name="colorControlActivated">#30383a</item>
    	<item name="colorControlHighlight">#30383a</item>
    </style>

    <style name="timePickerTheme" parent="Theme.AppCompat.Light.Dialog">
    	<item name="colorAccent">#30383a</item>
    	<item name="android:textColorPrimary">#30383a</item>
    </style>

     <style name="DefaultExplainingPermissionsTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">#30383a</item>

        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#ffffff</item>

        <!-- Used for the background -->
        <item name="android:background">#ffffff</item>
    </style>
</resources>
